{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"baseUrl": "./src",
		"rootDir": "src",
		"outDir": "dist",
		"declaration": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"allowJs": true,
		"types": ["node"],
		"paths": {
			"~/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
